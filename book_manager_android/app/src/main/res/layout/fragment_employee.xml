<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <ListView
        android:id="@+id/employee_list"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_weight="0.96" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/employee_sort_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.75" />

        <Spinner
            android:id="@+id/employee_asc_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">>

    <Button
        android:id="@+id/delete_employee_button"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="社員を消去する" />


    <Button
        android:id="@+id/add_employee_button"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="社員を追加する" />
    </LinearLayout>
</LinearLayout>